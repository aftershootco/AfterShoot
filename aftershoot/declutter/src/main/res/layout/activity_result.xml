<com.aftershoot.declutter.CustomViewPager xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewPager"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:tabBackground="@color/primaryColor"
        app:tabIconTint="@color/colorWhite"
        app:tabIndicatorHeight="4dp"
        app:tabRippleColor="@color/primaryLightColor"
        app:tabSelectedTextColor="@color/colorWhite"
        app:tabTextColor="@color/primaryLightColor" />

</com.aftershoot.declutter.CustomViewPager>